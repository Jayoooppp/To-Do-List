<%- include("header")  -%> 
    <div class="box" id="heading">
        <h1><%= title %></h1>
    </div>

    <div class="box">
        <% newitems.forEach(function (element) { %>

            <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" onchange="this.form.submit()" name="checkbox" value="<%= element._id %>">
                <p><%= element.item %></p>
                <input type="hidden" name="hidden" , value="<%= title %>">
            </div>
        </form>
            

         <% }) %>
            
        

        <form action="/" method="post" class="item">
            <input type="text" name="item" placeholder="Add Item" autocomplete="off">
            <button type="submit" name="button" value="<%= title %>">+</button>
        </form>
        
    </div>

    <%- include("footer")  -%> 


